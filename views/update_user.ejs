         <!-- form handling -->
<form   method="POST" id="update_user">
    <div class="new_user"  >
        <div class="form-title text-center" >
            <h1 class="text-dark" style="color: white;"><%= user.company%> <%= user.inttype %> Experience</h1>
            <!-- <span class=""> Read on to find 'Interview Experiences' of all product and service-based companies</span> -->
        </div>


        
        <div class="form-group">
            <label for="name" class="text-dark">Candidate Name</label>
            <input type="hidden" name="id" value="<%= user._id %>">
            <!-- <input type="text" name="name" value="<%= user.name %>" placeholder=""> -->
            <p><%= user.name %></p>
        </div>
    
        <div class="form-group">
            <label for="inttype" class="">Interview type:</label>
            <!-- <input type="text" name="inttype" value="<%= user.inttype %>" placeholder=""> -->
            <p><%= user.inttype %></p>
        </div>

        <div class="form-group">
            <label for="name" class="">Company Name</label>
            <!-- <input type="text" name="company" value="<%= user.company%>" placeholder=""> -->
            <p><%= user.company%></p>
        </div>
        <div class="form-group">
            <label for="name" class="">About Company</label>
            <!-- <input type="text" name="experience" value="<%= user.experience%>" placeholder=""> -->
            <p><%= user.experience%></p>
        </div>

        <div class="form-group">
            <label for="requirements" class="">Company Requirements:</label>
            <!-- <input type="text" name="requirements" value="<%= user.requirements%>" placeholder=""> -->
            <p><%= user.requirements%></p>
        </div>
        <div class="form-group">
            <label for="name" class="">Interview Process:(How many rounds the company conducted?)</label>
            <!-- <input type="text" name="process" value="<%= user.process%>" placeholder=""> -->
            <p><%= user.process%></p>
        </div>
        <div class="form-group">
            <label for="name" class="">Questions asked:</label>
            <!-- <input type="text" name="questions" value="<%= user.questions%>" placeholder=""> -->
            <p ><%= user.questions%></p>
        </div>

<!-- 
        <div class="form-group">
