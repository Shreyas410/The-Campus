		<!-- <h1>Registration</h1> -->
		<div class="container rounded bg-white mt-5 mb-5">

<form id="reg-form">
	<div class="row">
		<div class="col-md-5 border-right">
<div class="d-flex justify-content-between align-items-center mb-3">
			<h4 class="text-right">Registration</h4>
		</div>
		<input type="text" autocomplete="on" id="name" placeholder="name" />
			<input type="text" autocomplete="off" id="username" placeholder="d" />
			<input type="password" autocomplete="off" id="password" placeholder="d" />
			<input type="submit" value="Submit Form" />

		</div>
		
	</div>
			
		</form>
		</div> 
		

		<script>
			const form = document.getElementById('reg-form')
			form.addEventListener('submit', registerUser)

			async function registerUser(event) {
				event.preventDefault()
				const name = document.getElementById('name').value
				const username = document.getElementById('username').value
				const password = document.getElementById('password').value

				const result = await fetch('/api/register', {
					method: 'POST',
					headers: {
						'Content-Type': 'application/json'
					},
					body: JSON.stringify({
						name,
						username,
						password
					})
				}).then((res) => res.json())

				if (result.status === 'ok') {
					// everythign went fine
					alert('Success')
				} else {
					alert(result.error)
				}
			}
		</script>
